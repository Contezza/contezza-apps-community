{
    "$schema": "../../node_modules/ng-packagr/ng-package.schema.json",
    "dest": "../../dist/@contezza/common",
    "assets": [
        {
            "glob": "i18n/*.json",
            "input": "./assets",
            "output": "/assets/contezza-common/"
        },
        {
            "glob": "images/**/*",
            "input": "./assets",
            "output": "/assets/contezza-common/"
        }
    ],
    "lib": {
        "entryFile": "src/index.ts",
        "flatModuleFile": "contezza-common"
    }
}
