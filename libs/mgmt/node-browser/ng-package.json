{
    "$schema": "../../../node_modules/ng-packagr/ng-package.schema.json",
    "dest": "../../../dist/@contezza/node-browser",
    "assets": [
        {
            "glob": "i18n/*.json",
            "input": "./assets",
            "output": "/assets/"
        },
        {
            "glob": "images/**/*",
            "input": "./assets",
            "output": "/assets/"
        },
        {
            "glob": "*.json",
            "input": "./extensions",
            "output": "/assets/extensions"
        }
    ],
    "lib": {
        "entryFile": "src/index.ts"
    }
}
