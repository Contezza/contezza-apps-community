{
    "name": "js-console",
    "$schema": "../../../node_modules/nx/schemas/project-schema.json",
    "projectType": "library",
    "sourceRoot": "libs/mgmt/js-console/src",
    "prefix": "contezza",
    "targets": {
        "build": {
            "executor": "@angular-devkit/build-angular:ng-packagr",
            "outputs": ["dist/@contezza/js-console"],
            "options": {
                "tsConfig": "tsconfig.build.json",
                "project": "libs/mgmt/js-console/ng-package.json"
            }
        },
        "test": {
            "executor": "@nrwl/jest:jest",
            "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
            "options": {
                "jestConfig": "libs/mgmt/js-console/jest.config.ts",
                "passWithNoTests": true
            },
            "configurations": {
                "ci": {
                    "ci": true,
                    "codeCoverage": true
                }
            }
        },
        "lint": {
            "executor": "@nrwl/linter:eslint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": ["libs/mgmt/js-console/**/*.ts", "libs/mgmt/js-console/**/*.html"]
            }
        }
    },
    "tags": []
}
