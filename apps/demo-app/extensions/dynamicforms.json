{
    "$id": "app.demo-app.dynamicforms",
    "$version": "@@project.version@@",
    "$name": "Demo App Dynamic Forms",
    "$vendor": "Contezza BV",

    "features": {
        "dynamicforms": [
            {
                "id": "demo-shell",
                "form": {
                    "subfields": [
                        {
                            "id": "formId",
                            "type": "input",
                            "label": "Form ID",
                            "initialValue": "${form->formId}",
                            "validations": ["required"]
                        },
                        {
                            "id": "layoutId",
                            "type": "input",
                            "label": "Layout ID",
                            "initialValue": "${form->layoutId}"
                        },
                        {
                            "id": "style",
                            "type": "input",
                            "label": "Style",
                            "initialValue": "${form->style}"
                        },
                        {
                            "id": "multi",
                            "type": "multiautocomplete",
                            "label": "Multi",
                            "options": {
                                "dynamic-source": [
                                    {
                                        "id": "DIV",
                                        "label": "DIV"
                                    },
                                    {
                                        "id": "FDV",
                                        "label": "FDV"
                                    },
                                    {
                                        "id": "SDV",
                                        "label": "SDV"
                                    },
                                    {
                                        "id": "RTT",
                                        "label": "RTT"
                                    },
                                    {
                                        "id": "QWE",
                                        "label": "QWE"
                                    },
                                    {
                                        "id": "POI",
                                        "label": "POI"
                                    },
                                    {
                                        "id": "LOP",
                                        "label": "LOP"
                                    },
                                    {
                                        "id": "NJI",
                                        "label": "NJI"
                                    },
                                    {
                                        "id": "MHY",
                                        "label": "MHY"
                                    },
                                    {
                                        "id": "FGF",
                                        "label": "FGF"
                                    }
                                ],
                                "labelKey": "label"
                            },
                            "settings": {
                                "appearance": "outline",
                                "preSelectAllOption": true
                            }
                        }
                    ]
                },
                "layouts": [
                    {
                        "id": "default",
                        "layout": {
                            "class": "dynamicforms-row",
                            "subfields": [
                                {
                                    "id": "formId"
                                },
                                {
                                    "id": "layoutId"
                                },
                                {
                                    "id": "multi"
                                }
                            ]
                        }
                    }
                ]
            }
        ]
    }
}
