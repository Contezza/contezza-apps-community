{
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "apps/content-ce/app/src",
    "projectType": "application",
    "targets": {
        "build": {
            "executor": "@angular-devkit/build-angular:browser",
            "options": {
                "outputPath": "dist/aca",
                "index": "apps/content-ce/app/src/index.html",
                "main": "apps/content-ce/app/src/main.ts",
                "polyfills": "apps/content-ce/app/src/polyfills.ts",
                "tsConfig": "apps/aca/tsconfig.app.json",
                "allowedCommonJsDependencies": [
                    "moment-es6",
                    "minimatch",
                    "zen-observable",
                    "moment",
                    "@editorjs/code",
                    "@editorjs/editorjs",
                    "@editorjs/header",
                    "@editorjs/inline-code",
                    "@editorjs/list",
                    "@editorjs/marker",
                    "@editorjs/underline",
                    "@quanzo/change-font-size",
                    "cropperjs",
                    "editorjs-html",
                    "editorjs-text-color-plugin",
                    "pdfjs-dist",
                    "pdfjs-dist/web/pdf_viewer"
                ],
                "inlineStyleLanguage": "scss",
                "stylePreprocessorOptions": {
                    "includePaths": ["apps/content-ce/app/src/app/ui", "apps/aca/app/src/app/ui", "node_modules"]
                },
                "assets": [
                    {
                        "glob": "LICENSE",
                        "input": "apps/content-ce",
                        "output": "/"
                    },
                    "apps/content-ce/app/src/assets",
                    "apps/content-ce/app/src/favicon-96x96.png",
                    {
                        "input": "apps/content-ce/app/.tmp",
                        "output": "/",
                        "glob": "app.config.json"
                    },
                    {
                        "input": "apps/content-ce/app/src",
                        "output": "/",
                        "glob": "app.config.json"
                    },
                    {
                        "input": "apps/content-ce/app/src",
                        "output": "/",
                        "glob": "app.config.prod.json"
                    },
                    {
                        "input": "apps/content-ce/app/src",
                        "output": "/",
                        "glob": "app.config.test.json"
                    },
                    {
                        "glob": "**/*",
                        "input": "node_modules/@alfresco/adf-core/bundles/assets",
                        "output": "/assets"
                    },
                    {
                        "glob": "**/*",
                        "input": "node_modules/@alfresco/adf-content-services/bundles/assets",
                        "output": "/assets"
                    },
                    {
                        "glob": "pdf.worker.min.js",
                        "input": "node_modules/pdfjs-dist/build",
                        "output": "/"
                    },
                    {
                        "glob": "extension.schema.json",
                        "input": ".",
                        "output": "./assets"
                    },
                    {
                        "input": "apps/content-ce/projects/adf-office-services-ext/assets",
                        "output": "/assets/adf-office-services-ext",
                        "glob": "**/*"
                    },
                    {
                        "input": "apps/content-ce/projects/adf-office-services-ext/assets",
                        "output": "/assets/plugins",
                        "glob": "aos.plugin.json"
                    },
                    {
                        "input": "apps/content-ce/projects/aca-about/assets",
                        "output": "/assets/plugins",
                        "glob": "about.plugin.json"
                    },
                    {
                        "input": "apps/content-ce/projects/aca-settings/assets",
                        "output": "/assets/plugins",
                        "glob": "settings.plugin.json"
                    },
                    {
                        "glob": "folder-rules.plugin.json",
                        "input": "apps/content-ce/projects/aca-folder-rules/assets",
                        "output": "./assets/plugins"
                    },
                    {
                        "glob": "**/*",
                        "input": "apps/content-ce/projects/aca-folder-rules/assets",
                        "output": "./assets/aca-folder-rules"
                    },
                    {
                        "input": "apps/aca/extensions",
                        "output": "/assets/plugins",
                        "glob": "*.json"
                    },
                    {
                        "glob": "**/*",
                        "input": "apps/aca/assets",
                        "output": "./assets/contezza-aca"
                    },
                    {
                        "glob": "**/*",
                        "input": "libs/utils/assets",
                        "output": "./assets/contezza-utils"
                    },
                    {
                        "glob": "*.json",
                        "input": "libs/mgmt/js-console/extensions",
                        "output": "./assets/plugins"
                    },
                    {
                        "glob": "**/*",
                        "input": "libs/mgmt/js-console/assets",
                        "output": "./assets/mgmt/js-console"
                    },
                    {
                        "glob": "*.json",
                        "input": "libs/mgmt/node-browser/extensions",
                        "output": "./assets/plugins"
                    },
                    {
                        "glob": "**/*",
                        "input": "libs/mgmt/node-browser/assets",
                        "output": "./assets/mgmt/node-browser"
                    },
                    {
                        "glob": "**/*",
                        "input": "node_modules/monaco-editor/min",
                        "output": "./assets/monaco/min"
                    },
                    {
                        "glob": "**/*",
                        "input": "node_modules/monaco-editor/min-maps",
                        "output": "./assets/monaco/min-maps"
                    }
                ],
                "styles": [
                    "apps/content-ce/app/src/assets/fonts/material-icons/material-icons.css",
                    "apps/content-ce/app/src/assets/fonts/muli/muli.css",
                    "node_modules/cropperjs/dist/cropper.min.css",
                    "apps/content-ce/app/src/styles.scss",
                    "apps/aca/src/app/ui/styles.scss"
                ],
                "scripts": ["node_modules/pdfjs-dist/build/pdf.js", "node_modules/pdfjs-dist/web/pdf_viewer.js", "node_modules/moment/min/moment.min.js"],
                "buildOptimizer": false,
                "optimization": false,
                "vendorChunk": true,
                "extractLicenses": false,
                "sourceMap": true,
                "namedChunks": true,
                "fileReplacements": [
                    {
                        "replace": "apps/content-ce/app/src/app/extensions.module.ts",
                        "with": "apps/aca/src/overrides/app/extensions.module.ts"
                    }
                ]
            },
            "configurations": {
                "development": {
                    "optimization": false,
                    "buildOptimizer": false,
                    "vendorChunk": true,
                    "extractLicenses": false,
                    "sourceMap": true,
                    "namedChunks": true
                },
                "production": {
                    "optimization": true,
                    "outputHashing": "all",
                    "sourceMap": false,
                    "namedChunks": false,
                    "extractLicenses": true,
                    "buildOptimizer": true,
                    "verbose": false,
                    "budgets": [
                        {
                            "type": "bundle",
                            "name": "main",
                            "maximumWarning": "2mb",
                            "maximumError": "5mb"
                        },
                        {
                            "type": "bundle",
                            "name": "vendor",
                            "maximumWarning": "10mb",
                            "maximumError": "15mb"
                        },
                        {
                            "type": "anyComponentStyle",
                            "maximumWarning": "6kb"
                        }
                    ],
                    "fileReplacements": [
                        { "replace": "apps/content-ce/app/src/environments/environment.ts", "with": "apps/content-ce/app/src/environments/environment.prod.ts" },
                        {
                            "replace": "apps/content-ce/app/src/app/extensions.module.ts",
                            "with": "apps/aca/src/overrides/app/extensions.module.ts"
                        },
                        {
                            "replace": "apps/content-ce/package.json",
                            "with": "package.json"
                        }
                    ]
                }
            },
            "outputs": ["{options.outputPath}"],
            "defaultConfiguration": "development"
        },
        "serve": {
            "executor": "@angular-devkit/build-angular:dev-server",
            "options": {
                "host": "0.0.0.0",
                "disableHostCheck": true,
                "port": 4200,
                "open": true,
                "proxyConfig": "apps/aca/proxy.conf.js"
            },
            "configurations": {
                "production": {
                    "browserTarget": "aca:build:production",
                    "disableHostCheck": true
                },
                "development": {
                    "browserTarget": "aca:build:development"
                }
            },
            "defaultConfiguration": "development"
        }
    },
    "cli": {
        "cache": {
            "enabled": false
        }
    },
    "tags": ["scope:aca", "type:app", "category:aca"]
}
