{
    "extends": "./tsconfig.base.json",
    "exclude": ["libs/**/test.ts", "**/*.spec.ts"],
    "compilerOptions": {
        "declaration": true,
        "sourceMap": true,
        "inlineSourceMap": true,
        "inlineSources": true,
        "types": [],
        "paths": {
            "@contezza/common/*": ["./dist/@contezza/common/*"],
            "@contezza/core/*": ["./dist/@contezza/core/*"],
            "@contezza/search/*": ["./dist/@contezza/search/*"],
            "@contezza/third-party/*": ["./dist/@contezza/third-party/*"],
            "@contezza/dynamic-forms/*": ["./dist/@contezza/dynamic-forms/*"],
            "@contezza/js-console/*": ["./dist/@contezza/js-console/*"],
            "@contezza/node-browser/*": ["./dist/@contezza/node-browser/*"],
            "@contezza/people-group-picker/*": ["./dist/@contezza/people-group-picker/*"]
        }
    },
    "angularCompilerOptions": {
        "compilationMode": "partial"
    }
}
