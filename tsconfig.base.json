{
    "compileOnSave": false,
    "compilerOptions": {
        "rootDir": ".",
        "baseUrl": ".",
        "downlevelIteration": true,
        "module": "esnext",
        "target": "es2020",
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "inlineSources": true,
        "allowJs": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "typeRoots": ["node_modules/@types"],
        "types": ["jasmine", "node", "jasminewd2"],
        "lib": ["es2020", "dom", "DOM.Iterable", "esnext.array", "esnext.string", "esnext.asynciterable"],
        "importHelpers": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "removeComments": true,
        "paths": {
            "@contezza/utils": ["libs/utils/public-api"],
            "@contezza/third-party/monaco": ["libs/third-party/monaco/src/public-api"],
            "@contezza/material-table": ["libs/content/mat-table/src/public-api"],
            "@contezza/search": ["libs/search/src/public-api"],
            "@contezza/js-console": ["libs/mgmt/js-console/src/public-api"],
            "@contezza/js-console-extensions": ["libs/mgmt/js-console/src/public-extensions-api"],
            "@contezza/node-browser": ["libs/mgmt/node-browser/src/public-api"],
            "@contezza/node-browser-extensions": ["libs/mgmt/node-browser/src/public-extensions-api"]
        }
    },
    "exclude": ["node_modules", "tmp"],
    "angularCompilerOptions": {
        "preserveWhitespaces": false,
        "fullTemplateTypeCheck": true,
        "strictInjectionParameters": true,
        "strictTemplates": true
    }
}
